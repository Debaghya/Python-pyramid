<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} - Justice league</title>
    <link rel="stylesheet"
          href="//oss.maxcdn.com/bootstrap/3.3.4/css/bootstrap.css">
    <link rel="stylesheet"
          href="{{ request.static_url('mysite.site:static/mysite.css') }}">
    <link rel="shortcut icon"
          href="{{ request.static_url('mysite.site:static/pyramid-16x16.png') }}">

</head>
<body>


<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand"
               href="{{ request.route_url('home') }}">Justice League </a>
        </div>
        <ul class="nav navbar-nav">

            <li>
                <a href="{{ request.route_url('users_list') }}">
                     JLA Members
                </a>
            </li>
        </ul>


    </div>
</nav>

<div id="content" class="container">

  {% if view.messages %}
    {% for message in view.messages %}
        <div class="alert alert-info">
          {{ message }}
        </div>
    {% endfor %}
  {% endif %}

  {% block content %}{% endblock %}
</div>

<script src="//oss.maxcdn.com/jquery/2.1.3/jquery.js"></script>
</body>
</html>
